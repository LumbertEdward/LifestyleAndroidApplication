<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.home.MealPlanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_700"
        >
        <ImageView
            android:id="@+id/imgBackPlans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal PLans"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >
                <RelativeLayout
                    android:id="@+id/relNonVegan"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic1"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Non-Vegan Meal Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relFullVegan"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic2"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full-Vegan Meal  Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:id="@+id/relLactoVegetarian"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic3"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lacto-Vegetarian Meal Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relOvoVegetarian"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic4"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ovo-Vegetarian Meal Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:id="@+id/relLactoOvo"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic5"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lacto-Ovo Vegetarian Meal Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relPescatarian"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic6"
                        android:scaleType="fitXY"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:alpha=".7"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pescatarian Meal Plan"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:padding="20dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>