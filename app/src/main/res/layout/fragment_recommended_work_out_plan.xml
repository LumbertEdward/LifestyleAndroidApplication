<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.workoutplans.recommended.RecommendedWorkOutPlanFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/purple_700"
                app:title="Hello there"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    android:background="@color/purple_700"
                    android:fitsSystemWindows="true"
                    >
                    <TextView
                        android:id="@+id/txtHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAY 1"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgColl"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/workoutplan1"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax"
                    />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/selected_workout_number_item"
        />



</LinearLayout>